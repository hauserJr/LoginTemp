<div class="row mt-3">
    <div class="container" id="formContainer">
        <form class="form-signin" id="login" role="form" asp-action="CheckUser" asp-controller="Login">
            @Html.AntiForgeryToken()
            <h3 class="form-signin-heading">Sing In</h3>
            <a href="#" id="flipToRecover" class="flipLink">
                <div id="triangle-topright"></div>
            </a>
            <input type="text" class="form-control mt-1" name="Account" id="Account" placeholder="Acount" required autofocus>
            <input type="password" class="form-control mt-1" name="Pwd" id="Pwd" placeholder="Password" required>
            <button class="btn btn-lg btn-primary btn-block mt-1" type="submit">Sign in</button>
        </form>
    </div> <!-- /container -->
</div>